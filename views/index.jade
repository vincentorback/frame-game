doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Daytona Zombie Challenge
    link(rel='stylesheet' href='/css/style-min.css')
    link(rel='icon' type='image/png' href='/images/favicon.png' sizes='32x32')
  body



    .Alert.js-alert
    


    .Intro
      .Intro-inner
        h1.Intro-logo.Intro-logo--daytona Daytona
        h2.Intro-logo.Intro-logo--zombie Zombie Challenge
        button.Intro-button.Button.js-playButton Starta spelet



    aside.Footer(id='footer')
      .Footer-playing
        p.js-online
      .Footer-score
        p Dina poäng: 
          span.js-localScore 0
        p Allas poäng: 
          span.js-globalScore 0
      .Footer-info
        button.Button.js-showDialog Instruktioner &amp; Highscore



    .GameOver.js-gameOver(style='display:none')
      h1 Game Over!

      form.Form(id='highschore-form')
        input(type='text' placeholder='Skriv in ditt namn!' id='highschore-name')
        button.Button(type='submit') Skicka

      button.Button.js-resetButton Spela igen



    .Dialog.js-dialog(id='dialog' style='display:none')
      .Dialog-info
        h1 Instruktioner
        p Akta dig för zombies!!
        p Använd piltangenterna och skjut med mellanslag!

      .Dialog-highscores
        h2 Top 10 Highscore
        table(id='highscore-table')
          thead
            tr
              th Namn
              th Poäng
              th Datum
          tbody
          if highscore
            each score in highscore
              tr
                td #{score.name}
                td #{score.score}
                td #{score.niceDate}
      button.Dialog-close.Button.js-closeDialog Stäng


    button.SoundToggle.js-soundToggle.is-active Toggle sound



    script.
      if (('ontouchstart' in window) || window.DocumentTouch && document instanceof DocumentTouch) {
        window.alert('Sorry! Det här spelet funkar bara på datorer just nu!');
      }
    script(src='/socket.io/socket.io.js')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    script(src='js/lodash.min.js')
    script(src='js/howler.min.js')
    script(src='js/resources.js')
    script(src='js/input.js')
    script(src='js/sprite.js')
    script(src='js/client.js')