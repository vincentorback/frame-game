doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Daytona Zombie Challenge
    link(rel='stylesheet' href='/css/style-min.css')
  body



    .Alert.js-alert



    aside.Footer(id='footer')
      .Footer-playing
        p.js-playing
      .Footer-score
        p Points:
          span.js-score  0
      .Footer-info
        button.Button.js-showDialog Instructions &amp; Highscore
        button.Button.js-pauseButton(style='margin-left:15px') Pause



    .GameOver.js-gameOver(style='display:none')
      h1 Game Over!

      form.Form(id='highschore-form')
        input(type='text' placeholder='Write your name!' id='highschore-name')
        button.Button(type='submit') Submit

      button.Button.js-playButton Play again



    .Dialog.js-dialog(id='dialog' style='display:none')
      .Dialog-info
        h1 Instructions
        p Watch out for the zombies!!
        p Use the keyboard arrows to move around and shoot with the spacebar.

      .Dialog-highscores
        h2 Top 10 Highscore
        table(id='highscore-table')
          thead
            tr
              th Name
              th Points
              th Date
          tbody
          if highscore
            each score in highscore
              tr
                td #{score.name}
                td #{score.score}
                td #{score.niceDate}

      button.Dialog-close.Button.js-closeDialog Close

    script(src='/socket.io/socket.io.js')
    script(src='/js/main-min.js')
